@{
}
@model List<int>
@{
    ViewBag.Title = "Index";
}

<form action="@Url.Action("Details", "Order")" method="post">
    <select name="ID">
        @foreach (SelectListItem item in ViewBag.OrderIds)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <button type="submit">Show Details</button>
</form>

<div id="orderDetails">
    <!-- Details will be displayed here -->
</div>